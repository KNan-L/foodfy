{% extends "layout.njk" %}

{% block head %}

    <title>Foodfy</title>

{% endblock %}

{% block content %}

    <div class="banner">     
        <div class="texto-banner">
            <div class="titulo-banner">
                <h2>{{ index.title }}</h2>
            </div>
        
            <div class="p-banner">
                <p>{{ index.text }}</p>
            </div>
        </div> 

        <div class="imagem-banner"> 
            <img src="{{ index.img }}" alt="">
        </div> 
    </div>

    <div id='more'>
        <h3>Mais Acessados</h3>
    </div>

    <section class="receitas">
    {% for recipe in recipes %}

        <div class="receita">
            <div class="receita-imagem">
                <img src="{{recipe.img}}" alt="">
            </div>

            <div class="receita-titulo">
                <p>{{ recipe.title }}</p>
            </div>

            <div class="receita-autor">
                <p> {{ recipe.name }}</p>
            </div>
            <input id="input" type="hidden" name="id" value="{{recipe.id}}" >
        </div>

    {% endfor %}

        
    </section>

    <script src="/scripts.js"></script>    
{% endblock %}}