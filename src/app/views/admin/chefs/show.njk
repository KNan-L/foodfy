{% extends "layoutadmin.njk" %}

{% block head %}
    <title>Foodfy - Receita</title>
{% endblock %}

{% block content %}
    
   
<section class="back">
        <div class="div-novo buttoncreate">
            <p class="titulo-admin">Chef: {{chef.name}}</p>
            <a class="button" href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
        </div>

        <div class="recipes admin">
            <div class="chef-imagem">
                <img src="{{files[0].src}}" alt="">
            </div>

            <div class="chef-name">
                <p>{{chef.name}}</p>
            </div>

            <div class="chef-recipes">
                <p>{{chef.total_recipes}} Receitas</p>
            </div>
        </div>

        

</section>  

<div id="titulo-gerenciar">
    <p class="titulo-admin chefrecipes">Receitas</p>
</div>

    <section class="receitas admin">   

        
    {% for receita in dados %}
            <div class="receita admin">
                <div class="receita-imagem">
                
                    <img src="{{receita.file.src}}" alt="">
                
                </div>
                
                <div>
                    <p class="receita-titulo">{{ receita.title }}</p>
                    <p class="receita-autor">{{receita.name }}</p>
                    <input id="input" type="hidden" name="id" value={{receita.id}}>
                    <a class="linkrecipes">Visualizar</a>
                </div>
                
            </div>
    {% endfor %}
        


    </section>

    <script src="/scriptsadmin.js"></script>  


{% endblock %}





    