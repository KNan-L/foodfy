{% extends "layoutadmin.njk" %}

{% block head %}
    <title>Foodfy - Receita</title>
{% endblock %}

{% block content %}
<form method="POST" action="/admin/recipes" enctype="multipart/form-data">
    <section class="back">

        <div>
            <div class="div-novo buttoncreate">
                <p class="titulo-admin">Criando Receita</p>            
                <button class="button" type="submit">Salvar Receita</button>
            </div>        
        </div>

        
        <div class="edit">
            <p class="edit-titulo">Imagem da receita</p>
            <div class="container">
                <div id="photos-upload">
                    <div class="addimagem"> 
                        <i class="material-icons"> add </i>
                    </div>
                    <input 
                        id="photos-input"
                        type="file" 
                        name="photos"
                        multiple
                        accept="image/*"
                        onchange="PhotosUpload.handleFileInput(event)"
                    >

                </div>

                <div id="photos-preview">
                    
                </div>
            </div>
                
        </div>

        <div class="edit">
            <p class="edit-titulo">Titulo da Receita</p>
            <input 
                type="text" 
                name="title"
                value=""
            >    
        </div>


        <div class="edit">
            <p class="edit-titulo">Autor da Receita</p>
            <select name="chef">
            {% for chef in chefOptions %}
                <option value="{{chef.id}}"
                >{{chef.name}}
                </option>
            {% endfor %}
            </select>
        </div>
        
        <div class="edit">
            <p class="edit-titulo">Ingredientes</p>
            <div id="ingredients">
                <div class="ingredient">
                    <input 
                        type="text" 
                        name="ingredients[]"
                        value=""
                        placeholder="Ingrediente"
                    >    
                </div>
            </div>
                
            <a type="button" class="add-ingredient">Adicionar novo ingrediente</a>
        </div>
        
        <div class="edit" style="margin: 30px 0">
            <p class="edit-titulo">Modo de Preparo</p>

            <div id="preparos">
                <div class="preparo">                
                    <input 
                        type="text" 
                        name="preparation[]"
                        placeholder="preparo"
                    >                
                </div>
            </div>        
            <a type="button" class="add-preparo">Adicionar novo passo</a>
        </div>

        <div class="edit">
            <p class="edit-titulo">Informações adicionais</p>
            <textarea 
                class="information" 
                type="text"  
                name="information" 
                cols="30" 
                rows="10"></textarea>
     
        </div>
        
    </section>
    <script src="/scriptingredient.js"></script>  
    <script src="/scriptsadmin.js"></script>  


</form>



{% endblock %}




    