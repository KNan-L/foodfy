{% extends "layoutadmin.njk" %}

{% block head %}
    <title>Foodfy - Receita</title>
{% endblock %}

{% block header %}

<div class="div-novo logo">
        <a href="/"><img src="/logo.png" alt="logo"></a>
</div>

{% endblock %}

{% block content %}
<form method="POST" action="/admin/password-reset">
    <section class="admin-users users">
            <div>
                <span class="div-novo login">
                    <p class="titulo-admin">Nova Senha</p>     
                </span>   
            </div>

        <div class="login">

            <div class="users edit login">
                <div>
                    <p class="edit-titulo">Email</p>
                    <input                     
                        type="email" 
                        name="email"
                        placeholder="Digite seu e-mail"
                        value="{{user.email}}"
                    >
                </div>    
            </div>     

            <div class="edit password login">
                <p class="edit-titulo">Senha</p>
                <input                     
                    type="password" 
                    name="password"
                    placeholder="Digite sua nova senha"
                >
            </div> 

            <div class="edit password login">
                <p class="edit-titulo">Repetir Senha</p>
                <input                     
                    type="password" 
                    name="passwordRepeat"
                    placeholder="Digite a senha novamente"
                >
            </div> 

            <input type="hidden" name="token" value="{{token}}">

            <span class="loginbutton forgot">                        
                <button class="button" href="">Salvar</button>
            </span>      
        </div>
    </section>

</form>

<script src="/scriptsadmin.js"></script>  



{% endblock %}




    