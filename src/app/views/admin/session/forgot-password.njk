{% extends "layoutadmin.njk" %}

{% block head %}
    <title>Foodfy - Receita</title>
{% endblock %}

{% block header %}

<div class="div-novo logo">
        <a href="/"><img src="/logo.png" alt="logo"></a>
</div>

{% endblock %}

{% block content %}
<form method="POST" action="/admin/forgot-password">
    <section class="admin-users users">
            <div>
                <span class="div-novo login">
                    <p class="titulo-admin">Esqueceu a Senha?</p>     
                </span>   
            </div>

        <div class="login">

            <div class="users edit login">
                <div>
                    <p class="edit-titulo">Email</p>
                    <input                     
                        type="email" 
                        name="email"
                        placeholder="Digite seu e-mail"
                        value="{{user.email}}"
                    >
                </div>    
            </div>     


            <span class="loginbutton forgot">        
                <button class="button" href="">Recuperar</button>
            </span>      
        </div>
    </section>

</form>

<script src="/scriptsadmin.js"></script>  



{% endblock %}




    